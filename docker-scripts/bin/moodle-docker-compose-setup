#!/usr/bin/env bash

set -e 

export MOODLE_FOLDER=../moodle

export TMP_ZIP=../tmp.zip

if [ -d "$MOODLE_FOLDER" ];
then
    rm -rf $MOODLE_FOLDER
fi

if [ -f "$TMP_ZIP" ];
then
    rm $TMP_ZIP
fi

wget -O- -O ../tmp.zip https://downloads.sourceforge.net/project/moodle/Moodle/stable32/moodle-3.2.zip && unzip ../tmp.zip -d ../ && rm ../tmp.zip 

cp ../config.docker-template.php $MOODLE_FOLDER/config.php